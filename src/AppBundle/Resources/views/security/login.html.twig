{% extends 'AppBundle::base.html.twig' %}

{% block content %}
    {% if last_error %}
        <div>{{ last_error.messageKey|trans(last_error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('login') }}" method="post">
        <input placeholder="{% trans %}Username{% endtrans %}" class="form-control" type="text" id="username" name="_username" value="{{ last_username }}"/>
        <input placeholder="{% trans %}Password{% endtrans %}" class="form-control" type="password" id="password" name="_password"/>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <button class="btn btn-lg btn-primary btn-block" type="submit">{% trans %}Log in{% endtrans %}</button>
    </form>
{% endblock %}