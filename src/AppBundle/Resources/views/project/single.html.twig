{% extends 'AppBundle::base.html.twig' %}
{% import 'AppBundle::macros.html.twig' as macros %}

{% block title %}
    {{ parent() }}
    {% trans %}&nbsp;-&nbsp;Project&nbsp;--&nbsp;{% endtrans %}
    {% if entity %}
        {{ entity.label }}
    {% else %}
        {{ 'nothing here'|trans }}
    {% endif %}
{% endblock %}

{% block content %}
    {% if entity %}
        <h3>{{ entity.label }}</h3>
        <p>{{ entity.summary }}</p>
        {{ macros.acitivityBlock(activityBlock) }}
        {{ macros.issuesBlock(issuesBlock) }}
    {% else %}
        {{ 'nothing here'|trans }}
    {% endif %}
{% endblock %}
